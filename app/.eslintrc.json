{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended" // Интеграция Prettier в ESLint
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn", // Предупреждение при использовании console.log
      "no-unused-vars": "warn", // Предупреждение при неиспользуемых переменных
      "prettier/prettier": "error" // Ошибка, если код не соответствует правилам Prettier
    }
  }